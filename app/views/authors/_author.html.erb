<tr id="<%= author.id %>">
  <td><%= @authors ? @authors.index(author) + 1 : '' %></td>
  <td><%= link_to author.last_name, author %></td>
  <td><%= author.first_name %></td>
  <td><%= link_to "Edit", author, method: :edit %></td>
  <td><%= link_to "Delete", author, remote: true, method: :delete, data: { confirm: "Are you sure?" } %></td>
</tr>
