<div class='col-md-8 offset-md-2'>
  <h1>Shops</h1>

  <%= link_to "Add shop", new_shop_path, class: 'btn btn-default' %>
  <br>

  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody id="shops">
      <% if @shops.present? %>
        <%= render @shops %>
      <% end %>
    </tbody>
  </table>
</div>

