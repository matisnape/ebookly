<div class='col-md-8 offset-md-2'>
  <h1>Shops</h1>

  <%= link_to 'New Shop', 'javascript:void(0)', class: 'btn', id: 'create_btn' %>
  <br>

  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody id="shops">
      <%= render 'form' %>
      <% if @shops.present? %>
        <%= render @shops %>
      <% end %>
    </tbody>
  </table>
</div>

