<tr id="<%= shop.id %>">
  <td>
    <span><%= link_to shop.name, shop %></span>
    <%# <input class='input-small hide' type='text' size='30'> %>
  </td>
  <td>
    <div class='float-right btn-group'>
      <%= link_to "Edit", edit_shop_path(shop), class: 'btn btn-warning edit_btn' %>
      <%= link_to "Delete", shop, remote: true, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger delete_btn' %>
    </div>
  </td>
</tr>
